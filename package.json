{
  "name": "tspdt-monorepo",
  "private": true,
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "run-p api web",
    "api": "cd packages/api && bun dev",
    "web": "cd apps/web && bun dev",
    "build": "cd apps/web && bun run build",
    "deploy:web" : "cd apps/web && bun run deploy",
    "deploy:api" : "cd packages/api && bun run deploy"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
